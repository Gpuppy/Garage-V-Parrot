 {% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="container my-5">
        <h1 class="text-center mb-4">Horaires d'ouverture</h1>

        <div class="row justify-content-center">
            {% for OpeningHour in OpeningHours %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body text-center">
                            <h5 class="card-title text-uppercase">{{ OpeningHour.dayOfWeek }}</h5>
                            <p class="card-text">
                                <strong>Heure d'ouverture:</strong> {{ OpeningHour.timeOpen|date('H:i') }}<br>
                                <strong>Heure de fermeture:</strong> {{ OpeningHour.timeClose|date('H:i') }}
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
